@model IEnumerable<GetCategoryMasterVm>
@{
    int[] ids;
    }
<div class="list-bcat container">
<h1 class="text-center">รายการหมวดหมู่ทั้งหมด</h1>
<form asp-action="DeleteCategory"  id="bcatForm" method="post">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var item in Model)
      {
    <tr>
      <th scope="row">@item.Id</th>
      <td>
          <label class="form-control">
      <input type="checkbox"  id="ids" name="ids" value="@item.Id" />
      @item.Name
      </label>
  </td>
      <td>@item.Description</td>
     </tr>
    }
  </tbody>
</table>
<p>
<input type="submit" class="btn btn-success" value="ลบหมวดหมู่" />
</p>
</form>
</div>