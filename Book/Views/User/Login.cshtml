@model LoginVm
@{
    ViewData["Title"] = "เข้าสู่ระบบ";
    }
<h1 class="display-2">เข้าสู่ระบบ</h1>
<form asp-action="login" method="post">
<div asp-validation-summary="ModelOnly" class="list-group-item-danger"></div>
<div class="login-form">
<div class="form-group">
<label asp-for="UserName" class="form-control"></label>
<input asp-for="UserName" class="form-control" required />
</div>
<div class="form-group">
<label asp-for="Password" class="form-control"></label>
<input type="password" asp-for="Password" class="form-control" />
</div>
<input type="submit" class="btn btn-success" value="เข้าสู่ระบบ" />
</div>
</form>

<style type="text/css">
.login-form {
    background-color: lightblue;
       margin-bottom: 100px;
    width: 60px;
    height: 60px;
    position:relative;
    right: 20px;
    left:30px;
    top:20px;
    bottom:20px;
}
</style>